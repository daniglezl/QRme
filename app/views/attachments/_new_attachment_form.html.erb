<div class="header">
  <h2>New Attachment</h2>
</div>

<%= form_for @attachment, remote: true do |a| %>
  <div class="errors-container">
    <%= render 'shared/form_errors', object: @attachment %>
  </div>
  <%= hidden_field_tag :event_id, @attachment.event_id %>
  <div class="form-group">
    <%= a.label :name %>
    <%= a.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= a.label :file, "File:" %>
    <%= a.file_field :file %>
  </div>

  <div class="actions">
    <%= a.submit "Save", class: "btn btn-primary btn-lg" %>
  </div>

<% end %>
