<div class="header">
  <h1> Invite User to: </h1>
</div>

<div align="center" class= "event_info">
    <h4> <%= @event.name %> </h4>
</div>

<%= form_tag events_invite_event_path(id: @event.id), remote: true do %>
<div class="errors-container">
  <%= render 'shared/form_errors', object: @event %>
</div>
 <br>
  <div class="form-group">
        <table align="center">
    <thead>
      <tr>
        <th>  <%= label_tag :user_email %></th>
        <th> </th>
      </tr>
    </thead>
    <tbody>
            <tr>
              <td style="width:77%"><%= email_field_tag :user_email, "", class: "form-control" %></td>
              <td> <%= link_to events_invite_app_path, class: "btn btn-primary", title: "Invite more friends", remote: true do %>
                  <%= fa_icon "user-plus" %> </td>
            </tr>
          <% end %>
        </tbody>
      </table>
  </div>
  
  
  <div class= "actions">
    <%= submit_tag "Submit", class: "btn btn-primary btn-lg" %>
  </div>
<% end %>