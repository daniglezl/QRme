<div class="header">
  <h2>Invite User</h2>
</div>

<%= form_tag invite_user_event_path(@event.id), remote: true do %>
<div class="errors-container">
  <%= render 'shared/form_errors', object: @event %>
</div>

  <div class="form-group">
    <%= label_tag :user_email %>
    <%= email_field_tag :user_email, "", class: "form-control" %>
  </div>

  <div class="actions">
    <%= submit_tag "Submit", class: "btn btn-primary btn-lg" %>
  </div>
<% end %>
