<div class="header">
  <h2>New Event</h2>
</div>

<%= form_for @event, remote: true do |f| %>
<div class="errors-container">
  <%= render 'shared/form_errors', object: @event %>
</div>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :recurrent, "Repeat" %>
    <%= f.number_field :recurrent, class: "form-control" %>
  </div>
   <div class="checkbox">
    <label>
      <%= f.check_box :open %> Open
    </label>
  </div>

  <%= f.fields_for :event_instances do |ei| %>
    <div class="form-group">
      <%= ei.label :date, "Date and Time:" %>
      <%= ei.datetime_select :date, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= ei.label :location %>
      <%= ei.text_area :location, class: "form-control" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Submit", class: "btn btn-primary btn-lg" %>
  </div>

<% end %>
