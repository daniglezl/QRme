<div class="header">
      <h1> Accept invitation to: </h1>
  </div>
<div class= "form-group">
    <h4> <%= @event.name %> </h4>
</div>

<br>
<br>
<br>

  <div class= "actions">
    <%= link_to accept_invitation_event_event_path(id: @event.id), method: :post, class: "btn btn-primary active btn-lg", remote: true do %> 
