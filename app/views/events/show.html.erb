<div class="event-info">
  <h2><%= @event.name %></h2>
  <h5>Event Admin:</h5>
  <h5><i><%= @event.user.username %></i></h5>
  <h5>Number of Invitees <%= @event.invitations.count %></h5>
  
  <%= link_to invite_user_form_event_path, class: "invite-user-button",
    title: "Invite User", remote: true do %>
    <%= fa_icon "user-plus" %>
  <% end %>
</div>
<div class="container event-container">
<div class="row">
   <div class="col-sm-12">
      <div class="panel panel-default polls-card">
        <div class="panel-heading">
          <h3 class="panel-title">
            Event Instances
            <%= link_to new_poll_path(event_id: @event.id), class: "new-instance-button",
            remote: true do %>
              <%= fa_icon "plus" %>
            <% end %>
          </h3>
        </div>
        <div class="panel-body">
           <table class="table">
      <tr>
        <th>Date</th>
        <th>Location</th>
        <th># of Attendees</th>
        <th>Mark Attendance</th>
        <th>Actions</th>
      </tr>
       <% @event.event_instances.each do |ei| %>
           <tr>
             <td>
               <%= ei.date %>
             </td>
             <td>
                <%= ei.location %>
             </td>
             <td>
                <%= ei.attendances.count %>
             </td>
             <td>
                <%= link_to  edit_attendance_path(id: @event.id), class: "new-instance-button",
            remote: true do %>
              <%= fa_icon "check" %>  <% end %>
             </td>
              <td>
                <%= link_to edit_event_instance_path(id: ei.id), class: "new-instance-button",
            remote: true do %>
              <%= fa_icon "pencil" %> <% end %>
              <%= link_to event_instance_path(ei), method: :delete,
            data: { confirm: "Are you sure?",
            message: "The event's information will be lost and cannot be recovered.",
            }, remote: true, title: "Delete" do %>
              <%= fa_icon "trash" %>
              <% end %>
             </td>
             
             
            
           
          <% end %>
    </table>
          
          
        </div>
      </div>
    </div>
    
    

</div>

</div>
<div class="container event-container">
  <div class="row">
    <div class="col-sm-4">
      <div class="panel panel-default forums-card event-card">
        <div class="panel-heading">

        

          <h3 class="panel-title">
            Forums
            <%= link_to new_forum_thread_path(event_id: @event.id), class: "new-instance-button",
            remote: true do %>
              <%= fa_icon "plus" %>
            <% end %>
          </h3>
        </div>
        <div class="panel-body">
          <%= render 'shared/forum_threads_list' %>

        </div>
      </div>
    </div>
    <div class="col-sm-4">
      <div class="panel panel-default attachments-card event-card">
        <div class="panel-heading">
          <h3 class="panel-title">Attachments<%= link_to new_attachment_path(event_id: @event.id), class: "new-instance-button",
            remote: true do %>
              <%= fa_icon "plus" %>
            <% end %></h3>
        </div>
        <div class="panel-body">
          Attachments
        </div>
      </div>
    </div>
    <div class="col-sm-4">
      <div class="panel panel-default polls-card even-card">
        <div class="panel-heading">
          <h3 class="panel-title">
            Polls
            <%= link_to new_poll_path(event_id: @event.id), class: "new-instance-button",
            remote: true do %>
              <%= fa_icon "plus" %>
            <% end %>
          </h3>
        </div>
        <div class="panel-body">
          <% @event.polls.each do |p| %>
            <span><%= p.name %></span>
            <span><%= link_to "Edit", edit_poll_path(p) %></span>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-sm-12">
      <div class="panel panel-default polls-card">
        <div class="panel-heading">
          <h3 class="panel-title">
            Other Options
           
          </h3>
        </div>
        <div class="panel-body">
           
           <a href="#">Invite Users</a><br/>
            <a href="#">Uninvite users</a><br/>
            
            <a href="#">Print QR Code</a><br/>
            <a href="#" onclick="confirm('Are you sure you want to delete this event')">Delete event</a>
        
       
      
   
          
          
        </div>
      </div>
    </div>
  </div>
  
</div>


