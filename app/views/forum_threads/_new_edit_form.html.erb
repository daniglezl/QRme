<div class="header">
  <h2><%= params[:action] == "new" ? "New" : "Edit" %> Forum Thread</h2>
</div>

<%= form_for @forum_thread, remote: true do |f| %>
  <div class="errors-container">
    <%= render 'shared/form_errors', object: @forum_thread %>
  </div>

  <%= hidden_field_tag :event_id, @forum_thread.event_id %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Submit", class: "btn btn-primary btn-lg" %>
  </div>

<% end %>
