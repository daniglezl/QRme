<div class="header">
  <h2><%= params[:action] == "new" ? "New" : "Edit" %> Poll Answer</h2>
</div>

<%= form_for @poll_answer, remote: true do |f| %>
  <div class="errors-container">
    <%= render 'shared/form_errors', object: @poll_answer %>
  </div>

  <%= hidden_field_tag :poll_id, @poll_answer.poll_id %>
  
  <%= hidden_field_tag :voteCount, 1 %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Submit", class: "btn btn-primary btn-lg" %>
  </div>

<% end %>
