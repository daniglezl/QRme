<div class="header">
  <h2><%= params[:action] == "new" ? "New" : "Edit" %> Poll</h2>
</div>

<%= form_for @poll, remote: true do |f| %>
  <div class="errors-container">
    <%= render 'shared/form_errors', object: @poll %>
  </div>

  <%= hidden_field_tag :event_id, @poll.event_id %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Submit", class: "btn btn-primary btn-lg" %>
  </div>

<% end %>
