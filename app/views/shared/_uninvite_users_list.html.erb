  <table class="main-table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Uninvite</th>
      </tr>
    </thead>
    <tbody>
      <% @invitation.each do |inv| %>
            <tr>
              <td><%= inv.user.username %></td>
              <td>
                <%= link_to remove_invite_event_path(inv), method: :delete,
                data: {confirm: "Are you sure?",
                message: "The user will be removed from the invitees list.",
                }, remote: true, title: "Delete" do %>
                  <%= fa_icon "trash" %>
          <% end %>    
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>